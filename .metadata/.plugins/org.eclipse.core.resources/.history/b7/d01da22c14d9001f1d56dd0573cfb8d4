package entities;

public class Product {
	
	public String name;
	public double price;
	public int stock;
	
	public double totalValueInStock() {
		return stock * price;
	}
	
	public void addProducts(int quantity) {
		this.stock += quantity;
	}
	
	public void removeProducts(int quantity) {
		stock -= quantity;
	}
	
	public String toString() {
		return name + ", $ " + price + ", " + stock + " units, Total: $ " + totalValueInStock();
	}
}
